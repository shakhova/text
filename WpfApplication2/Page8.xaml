            <Image HorizontalAlignment="Center" Height="124" Margin="0,358,0,0" VerticalAlignment="Top" Width="181" Source="pic7_4.jpg"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,552,0,0" Height="25" Width="606" Style="{DynamicResource TextStyle}"><Run Language="ru-ru" Text="   Максимальное и минимальное значения:"/></TextBlock>
            <Image HorizontalAlignment="Center" Height="79" Margin="0,577,0,0" VerticalAlignment="Top" Width="128" Source="pic7_6.jpg"/>
